<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo blanco -->
    <solid android:color="#FFFFFF" />

    <!-- Bordes redondeados -->
    <corners android:radius="10dp" />

    <!-- Borde exterior -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Color del borde negro -->

    <!-- Padding interno -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
