<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RestaurantDetailActivity">

    <!-- ScrollView que envuelve el contenido desplazable -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor dentro del ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen del restaurante -->
            <ImageView
                android:id="@+id/restaurant_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:contentDescription="Restaurant image" />

            <!-- Título del restaurante -->
            <TextView
                android:id="@+id/restaurant_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Restaurante $$$"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="16dp" />

            <!-- Sección de Menú -->
            <TextView
                android:id="@+id/menu_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingStart="16dp"
                android:paddingTop="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"> <!-- Elimina las barras de desplazamiento -->

                <!-- LinearLayout horizontal para contener las cards -->
                <LinearLayout
                    android:id="@+id/menu_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:background="@drawable/rounded_border">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <!-- Imagen del platillo del menú -->
                            <ImageView
                                android:id="@+id/menu_item_image_1"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_launcher_foreground"
                                android:scaleType="centerCrop" />

                            <!-- Detalles del platillo -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sushi Rock n Roll"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:paddingTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$19.000"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_green_dark"
                                android:paddingTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card 2 (ejemplo) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:background="@drawable/rounded_border">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <!-- Imagen del platillo del menú -->
                            <ImageView
                                android:id="@+id/menu_item_image_2"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_launcher_foreground"
                                android:scaleType="centerCrop" />

                            <!-- Detalles del platillo -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arroz con Pollo"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:paddingTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$21.000"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_green_dark"
                                android:paddingTop="4dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Puedes agregar más cards aquí -->

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/resenia_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reseñas"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingStart="16dp"
                android:paddingTop="8dp" />

            <ScrollView
                android:id="@+id/experience_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!-- Ejemplo de una experiencia -->
                    <TextView
                        android:id="@+id/experience_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¡El Sushi Rock n Roll fue una verdadera revelación!"
                        android:background="@drawable/experience_background"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:textAlignment="center" />

                    <!-- Ejemplo de una experiencia -->
                    <TextView
                        android:id="@+id/experience_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Odio Moviles"
                        android:background="@drawable/experience_background"
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:textAlignment="center" />
                </LinearLayout>
            </ScrollView>

            <!-- Placeholder para el mapa -->
            <ImageView
                android:id="@+id/map_placeholder"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:contentDescription="Map location"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
    
    <!-- Barra de navegación inferior -->
    <include
        android:id="@+id/include_bottom_nav"
        layout="@layout/bottom_nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
